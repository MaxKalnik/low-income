include ./table-data-housing-energy
include ./svg-mixins

.section.section--table.section--table-housing
  .breadcrumbs__wrap
    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Home

    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | Reports

    .breadcrumbs__item
      a.breadcrumbs__link(href='')
        | The Best and Worst States for Low-Income Individuals and Families

    .breadcrumbs__item
      | Low-Income Housing and Energy Assistance Program

  h2.section__title.section__title--table
    | Low-Income Housing and Energy Assistance Program

  .ranking-table__container
    .ranking-table__hint
      .ranking-table__hint-close-btn
      p.ranking-table__hint-text
        | By default cities are sorted
        br
        | by alphabet. 
        span.semibold
          | You could sort by other parameter.

    .mobile-only
      table.ranking-table.ranking-table--fixed
        thead
          tr
            th(class='table-sort' data-index='0') State

        tbody
          each value in values
            tr
              td
                = value.state

    .ranking-table__wrapper
      table.ranking-table.ranking-table--data
        thead
          tr
            th(class='table-sort' data-index='0') State
            th(class='table-sort' data-index='1') Total Potential Benefits
            th State Heating Cooling Repair Replacement
            th Other State Assistance
            th(class='table-sort' data-index='4') Monthly Average
            th(class='table-sort' data-index='5') Average duration (in weeks)
            th(class='table-sort' data-index='6') Average weekly benefit
            th(class='table-sort' data-index='7') Housing Voucher Average Amount
            th(class='table-sort' data-index='8') statewide low income threshold

        tbody
          each value in values
            tr
              td
                = value.state

              td
                = value.totalBenefits

              td
                = value.stateHeating

              td
                = value.otherAssistance

              td
                = value.monthlyAverage

              td
                = value.averageDuration

              td
                = value.averageWeeklyBenefit

              td
                = value.housingVoucher

              td
                = value.hud

  .map__user-block.map__user-block--table
    .map__btn-wrapper.map__btn-wrapper--share
      button.map__btn.map__btn--share
        span.map__btn-text
          | Share

        +share_svg

      .map__btn-container.map__btn-container--share
        .map__btn-socials
          a.map__btn-socials-item.map__btn-socials-item--fb(href="")
            img.socials-logo(src="images/svg/fb-share.svg")

          a.map__btn-socials-item.map__btn-socials-item--tw(href="")
            img.socials-logo(src="images/svg/tw-share.svg")

          a.map__btn-socials-item.map__btn-socials-item--go(href="")
            img.socials-logo(src="images/svg/go-share.svg")

    .map__btn-wrapper.map__btn-wrapper--embed
      button.map__btn.map__btn--embed
        span.map__btn-text
          | Embed

        +embed_svg

      .map__btn-container.map__btn-container--embed
        .map__btn-embed
          textarea.map__btn-embed-text#copyTarget(autofocus='', readonly='')
            | <iframe src="https://www.rewardexpert.com/shared/low-income/low-income-full-table/" width="560px" height="2741px" frameborder="0" scrolling="no"></iframe><div style="width:100%;text-align:right;font-size:14px;color:#0a0c0d;margin-bottom:16px;">Source: <a style="color:#2093cd;" href="https://www.rewardexpert.com/blog/studies/the-best-and-worst-states-for-low-income-individuals-and-families/">RewardExpert Blog</a></div>

          button.map__btn-embed-copy#copyButton
            | copy to clipboard

  .btn-container.btn-container--under-table
    a.btn-go-back(href="index.html")
      | GO BACK TO THE FULL REPORT

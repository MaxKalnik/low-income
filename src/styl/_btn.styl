mapBtn(primaryColor)
  button
    font-family: Whitney SSm A, sans-serif

  .btn__container
    display: flex
    justify-content: center
    margin-top: 25px

    +respond-to($xsmall)
      margin: 4px 12px 0 12px

  .btn-container.btn-container--under-table
    margin-top: 32px
    +respond-from($large)
      margin-top: 42px

  .btn__container--mob-hidden
    +respond-to($xsmall)
      display: none

  .btn__main-text
    border-bottom: 1px solid alpha(primaryColor, 0.3)
    transition: .25s ease-out
    color: primaryColor

  .btn__main-icon
    position: relative
    top: 5px
    margin-left: 10px
    transition: fill .25s ease-out
    fill: #5656ce
    +respond-to($xsmall)
      display: none

  #btn_icon
    fill: primaryColor
    transition: .25s ease-out

  .btn__main
    display: inline-block
    font-size: 12px
    line-height: 26px
    font-weight: 600
    text-transform: uppercase
    border-radius: 5px
    padding: 14px 24px
    border: 1px solid alpha(primaryColor, 0.3)
    cursor: pointer
    box-sizing: border-box
    transition: .25s ease-out
    background: $color-white

    &:hover
      background: primaryColor
      color: $color-white
      border: 1px solid $color-white
      #btn_icon
        fill: $color-white
      .btn__main-text
        border-bottom: 1px solid transparent
        color: $color-white

    +respond-to($xsmall)
      width: 100%
      max-width: 400px
      display: block
      padding: 10px 12px
      font-size: 10px
      text-align: center
      margin-top: 12px

.section--top
  mapBtn($color-blue)

.section--bottom
  mapBtn($color-brown)

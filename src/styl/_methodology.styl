.methodology__content
  display: flex
  flex-direction: row
  align-items: flex-start
  margin-bottom: 45px

  +respond-to($medium)
    margin-bottom: 30px

  +respond-to($xsmall)
    flex-direction: column
    align-items: center
    margin-bottom: 24px

.methodology__img
  position: relative
  margin-right: 33px
  top: 5px

  +respond-to($xsmall)
    margin-right: 0
    margin-bottom: 24px

.methodology__text-item
  @extend .main-text
  margin-bottom: 24px
  &:last-child
    margin-bottom: 0

.methodology__sources
  margin-left: 99px
  +respond-to($xsmall)
    margin-left: 0

  .list-icon
    width: 16px
    height: 16px
    position: absolute
    left: 0
    top: 4px

.methodology__sources-title
  font-size: 18px
  line-height: 26px
  font-weight: 600
  margin-bottom: 12px

.methodology__sources-link
  display: inline
  border-bottom: 1px solid #cbe4f0
  cursor: pointer
  color: #1e92cc
  line-height: 20px
  font-style: italic
  &:hover
    border-bottom: 1px solid transparent

.methodology__sources-list
  display: flex
  flex-direction: row
  flex-wrap: wrap
  justify-content: space-between

  +respond-to($xsmall)
    flex-direction: column

.methodology__sources-list-item
  position: relative
  width: calc(50% - 12px)
  font-size: 14px
  line-height: 26px
  font-weight: 300
  box-sizing: border-box
  font-style: italic
  margin-bottom: 32px
  &:last-child
    margin-bottom: 0

  +respond-to($xsmall)
    width: 100%
    margin-bottom: 24px
    &:last-child
      margin-bottom: 0

.methodology__sources-list-title
  font-weight: 600
  font-style: normal

.methodology__sources-list-link
  @extend .main-link

.methodology__sources-sublist-item--italic
  font-style: italic

.methodology__sources-ab-sublist
  padding-left: 24px
